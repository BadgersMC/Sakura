+        ChunkMap.TrackedEntity v = super.remove(k);
+        entityList.remove(v);
+        return v;
+    }
+
+    @Override
+    public ObjectCollection<ChunkMap.TrackedEntity> values() {
+        return entityList;
+    }
+
+}
